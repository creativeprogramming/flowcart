<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/flowcart/fields">
		<field name="id" type="hidden"
			default="0"
			label="COM_FLOWCART_ZONE_ID_LABEL"
			description="COM_FLOWCART_ZONE_ID_DESC"
			readonly="true"
			size="10"
		/>
		<field name="name" type="text"
			label="COM_FLOWCART_NAME_LABEL"
			description="COM_FLOWCART_NAME_DESC"
			required="true"
			size="30"
		/>
		<field name="active" type="radio"
			label="COM_FLOWCART_ACTIVE_LABEL"
			description="COM_FLOWCART_ACTIVE_DESC"
			required="true"
			size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>
